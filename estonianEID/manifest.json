{
  "manifest_version": 2,

  "name": "Estonia eID Lab",
  "description": "This extension allows you to sign text using your Estonian E-ID ",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "nativeMessaging"
  ],

  "background": {
    "scripts": ["background.js"]
  },
    
  "content_scripts" : [
    {
        "matches" : [ "https://*/*" ],
        "js": ["content.js"]
    }
  ]
}